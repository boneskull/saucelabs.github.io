{
  "name": "opensource.saucelabs.com",
  "homepage": "https://opensource.saucelabs.com",
  "version": "0.0.0",
  "description": "Open Source Program Office website",
  "scripts": {
    "build": "run-s import sass build:*",
    "build:production": "hugo --minify",
    "clean": "rm -rf .sass-cache content data public resources themes/kross-hugo/assets/css",
    "import": "node scripts/import.js",
    "lint": "sass-lint -c .sass-lint.yml",
    "sass": "mkdir ./themes/kross-hugo/assets/css && sass ./static/sass/style.scss:./themes/kross-hugo/assets/css/style.css",
    "start": "run-p start:*",
    "start:hugo": "hugo server -p 8080",
    "start:sass": "npm run sass -- --watch",
    "start:open": "open http://localhost:8080"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/saucelabs/opensource.saucelabs.com.git"
  },
  "license": "Apacha-2.0",
  "bugs": {
    "url": "https://github.com/saucelabs/opensource.saucelabs.com/issues"
  },
  "devDependencies": {
    "@octokit/rest": "^17.9.3",
    "npm-run-all": "^4.1.5",
    "sass": "^1.26.7",
    "sass-lint": "^1.13.1"
  }
}
